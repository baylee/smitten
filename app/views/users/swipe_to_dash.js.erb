var new_spark = $("#new_spark_div")
var homepage = $("#homepage")
var dashboard = $("#dashboard")
var other_pages = $("#other_pages")
var mainwrapper = $("#mainwrapper")

dashboard.empty().removeAttr("style").html("<%= j render 'dashboardpartial' %>")
new_spark.empty().removeAttr("style");
other_pages.empty().removeAttr("style");

var smoothtrans = function(){
  dashboard.css('display', 'block');
  homepage.css('position', 'absolute')
  homepage.css('width', '100%')
  homepage.animate({
    right:'100%',
    opacity: 1
  },{ duration: 200, queue: false})

  dashboard.animate({
    left: "0%",
    opacity: 1
  },{ duration: 200, queue: false});

}
setTimeout(function(){smoothtrans()}, 300)

